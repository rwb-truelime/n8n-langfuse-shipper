{
  // VS Code debug configurations for n8n-langfuse-shipper
  // Uses Python module entrypoint (python -m n8n-shipper shipper ...)
  // Loads environment variables from .env if present.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Shipper (Dry Run)",
      "type": "debugpy",
      "request": "launch",
      "module": "n8n_langfuse_shipper",  // Use actual package name for -m invocation
      "args": [
        "shipper",
        "--limit",
        "25",
        "--dry-run",
        "--debug"
      ],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Shipper (Real Export)",
      "type": "debugpy",
      "request": "launch",
      "module": "n8n_langfuse_shipper",
      "args": [
        "shipper",
        "--limit",
        "100",
        "--no-dry-run",
        "--debug"
      ],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Shipper (Start After ID)",
      "type": "debugpy",
      "request": "launch",
      "module": "n8n_langfuse_shipper",
      "args": [
        "shipper",
        "--start-after-id",
        "340344",
        "--limit",
        "1",
        "--dry-run",
        "--debug"
      ],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Module (Custom Args Prompt)",
      "type": "debugpy",
      "request": "launch",
      "module": "n8n_langfuse_shipper",
      "args": [],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Shipper (Entry Script)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/n8n_langfuse_shipper/__main__.py",
      "args": [
        "shipper",
        "--limit",
        "5",
        "--dry-run",
        "--debug"
      ],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "PyTest (All Tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "PyTest (Single File Prompt)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ]
}
